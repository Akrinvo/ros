<launch>

   <master auto="start"/>
 

 <!--- Run AMCL --> 
    <include file="$(find amcl)/examples/amcl_diff.launch" />

   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find robot_nav)/common_costmap.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find robot_nav)/common_costmap.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find robot_nav)/local_costmap.yaml" command="load" />
    <rosparam file="$(find robot_nav)/global_costmap.yaml" command="load" /> 
    <rosparam file="$(find robot_nav)/base_local_planner.yaml" command="load" />
    <remap from = "cmd_vel" to = "cmd_vel"/>
    <remap from = "odom" to = "odom"/>
    <remap from = "scan" to = "scan"/>
    <param name = "move_base/DWAPlannerROS/yaw_goal_tolerance" value = "1.0"/>
    <param name = "move_base/DWAPlannerROS/xy_goal_tolerance" value = "0.10"/>
 </node>
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find robot_nav)/src/robot.rviz" />

</launch> 
